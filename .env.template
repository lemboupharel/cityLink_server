# Database Configuration
DATABASE_URL="postgresql://citylink:citylink_secure_password@localhost:5432/citylink_db?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRATION="876000h"  # 100 years as specified

# Server Configuration
PORT=3000
NODE_ENV="development"

# CORS Configuration
CORS_ORIGIN="*"  # Change to specific origins in production

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR="./uploads"

# Database Credentials (used by Docker)
POSTGRES_USER="citylink"
POSTGRES_PASSWORD="citylink_secure_password"
POSTGRES_DB="citylink_db"

# API Configuration
API_PREFIX="/api"

# Geospatial Configuration
# Maximum distance (in meters) for dump report clustering
GEO_CLUSTER_RADIUS=100

# Reputation Configuration
REPUTATION_PER_VERIFIED_DUMP=10
REPUTATION_DECAY_FALSE_REPORT=50

# Recycling Payment Split (percentages)
COLLECTOR_PERCENTAGE=50
CITIZEN_PERCENTAGE=20
CITYLINK_PERCENTAGE=30

# Price per kg by waste type (in local currency)
PRICE_PET_PER_KG=500
PRICE_ALUMINUM_PER_KG=800
PRICE_HDPE_PER_KG=600
